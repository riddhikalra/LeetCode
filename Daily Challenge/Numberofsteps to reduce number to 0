class Solution {
    public int numberOfSteps(int num) {
        int count=0;
        int temp;
        while(num!=0)
        {
            
            if(num%2==1)
            {
                
                temp=num-1;
                count++;
            }
            else{
                temp=num/2;
                count++;
            }
          num=temp;  
        }
        return count;
    }
}
